<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="150dp"
    android:layout_margin="8dp"
    android:background="?attr/selectableItemBackground"
    app:cardCornerRadius="5dp"
    android:layout_width="match_parent">


    <RelativeLayout
        android:layout_height="match_parent"
        android:padding="10dp"
        android:layout_width="match_parent">


        <ImageView
            android:id="@+id/iv_item_project"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher"
            android:scaleType="fitXY"
            android:layout_width="100dp" />

        <TextView
            android:id="@+id/tv_item_project_title"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@id/iv_item_project"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="ProjectTitle"
            android:textColor="@color/Black_333333"
            android:textSize="16sp"
            android:layout_width="wrap_content" />

        <TextView
            android:id="@+id/tv_item_project_desc"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_project_title"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/iv_item_project"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="This is project desc "
            android:textSize="14sp"
            android:layout_width="wrap_content" />


        <TextView
            android:id="@+id/tv_item_project_zz"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@id/iv_item_project"
            android:text="作者:"
            android:textSize="14sp"
            android:layout_width="wrap_content" />

        <TextView
            android:id="@+id/tv_item_project_author"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@id/tv_item_project_zz"
            android:text="author"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:layout_width="wrap_content" />

        <TextView
            android:id="@+id/tv_item_project_time"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:text="yyyy-MM--dd"
            android:layout_width="wrap_content" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>